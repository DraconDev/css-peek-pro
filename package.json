{
  "name": "css-peak-pro",
  "displayName": "CSS Peak Pro",
  "description": "Enhanced CSS Peak extension with smart scoping that shows only relevant CSS for elements based on configurable modes - Smart, Global, Folder, or Filename matching",
  "version": "1.0.1",
  "publisher": "DraconDev",
  "repository": {
    "type": "git",
    "url": "https://github.com/DraconDev/css-peak-pro.git"
  },
  "homepage": "https://github.com/DraconDev/css-peak-pro",
  "bugs": {
    "url": "https://github.com/DraconDev/css-peak-pro/issues"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Extension Packs"
  ],
  "activationEvents": [
    "onCommand:cssPeakPro.showCSS",
    "onLanguage:html",
    "onLanguage:jsx",
    "onLanguage:tsx",
    "onLanguage:vue"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cssPeakPro.showCSS",
        "title": "Show CSS for this element"
      }
    ],
    "keybindings": [
      {
        "command": "cssPeakPro.showCSS",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "CSS Peak Pro Settings",
      "properties": {
        "cssPeakPro.scopingMode": {
          "type": "string",
          "enum": [
            "smart",
            "global",
            "folder",
            "filename"
          ],
          "default": "smart",
          "description": "üéØ Scoping Mode: Choose how CSS files are discovered\n‚Ä¢ Smart: Smart combination with fallback (recommended)\n‚Ä¢ Global: Search entire workspace\n‚Ä¢ Folder: Same directory only\n‚Ä¢ Filename: Same name files (any extension)"
        },
        "cssPeakPro.cssFileExtensions": {
          "type": "array",
          "default": [
            "css",
            "scss",
            "sass",
            "less"
          ],
          "description": "üìÅ CSS File Extensions: Which file types to search for\nEnter extensions without the dot, separated by commas\nExample: css,scss,sass,less,styl"
        },
        "cssPeakPro.enableHover": {
          "type": "boolean",
          "default": true,
          "description": "üñ±Ô∏è Enable Hover: Show CSS properties when hovering over elements, classes, and IDs"
        },
        "cssPeakPro.maxRulesToShow": {
          "type": "number",
          "default": 10,
          "description": "üìä Max Rules Display: Maximum number of CSS rules to show in hover tooltip (recommended: 5-15)"
        },
        "cssPeakPro.enableFallbackToGlobal": {
          "type": "boolean",
          "default": true,
          "description": "üîÑ Fallback to Global: When no scoped CSS files found, fall back to searching the entire workspace"
        },
        "cssPeakPro.showInStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "üìç Status Bar: Show CSS Peak Pro indicator in the status bar for quick access"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build": "node scripts/build.js",
    "package": "vsce package",
    "test": "node test.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "keywords": [
    "css",
    "scss",
    "sass",
    "less",
    "hover",
    "peek",
    "definition",
    "smart-scoping",
    "html",
    "react",
    "vue",
    "css-peak",
    "scoped-css",
    "css-navigation",
    "frontend",
    "web-development"
  ],
  "license": "MIT",
  "icon": "css_peek_icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "badges": [
    {
      "url": "https://img.shields.io/github/v/release/DraconDev/css-peak-pro",
      "href": "https://github.com/DraconDev/css-peak-pro/releases",
      "description": "Latest Release"
    },
    {
      "url": "https://img.shields.io/github/issues/DraconDev/css-peak-pro",
      "href": "https://github.com/DraconDev/css-peak-pro/issues",
      "description": "Issues"
    }
  ]
}