{
  "name": "css-peak-pro",
  "displayName": "CSS Peak Pro",
  "description": "An improved CSS Peak extension with smart scoping that only shows CSS for elements in the same folder or with matching file names",
  "version": "1.0.0",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:cssPeakPro.showCSS",
    "onLanguage:html",
    "onLanguage:jsx",
    "onLanguage:tsx",
    "onLanguage:vue"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cssPeakPro.showCSS",
        "title": "Show CSS for this element"
      }
    ],
    "keybindings": [
      {
        "command": "cssPeakPro.showCSS",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "CSS Peak Pro",
      "properties": {
        "cssPeakPro.showInStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show CSS info in status bar"
        },
        "cssPeakPro.maxRulesToShow": {
          "type": "number",
          "default": 10,
          "description": "Maximum number of CSS rules to show in hover"
        },
        "cssPeakPro.enableHover": {
          "type": "boolean",
          "default": true,
          "description": "Enable CSS hover functionality"
        },
        "cssPeakPro.scopingMode": {
          "type": "string",
          "enum": [
            "global",
            "folder",
            "filename",
            "smart"
          ],
          "default": "smart",
          "description": "CSS scoping mode: global (all files), folder (same directory), filename (same name, any extension), smart (combination with fallback)"
        },
        "cssPeakPro.cssFileExtensions": {
          "type": "array",
          "default": [
            "css",
            "scss",
            "sass",
            "less"
          ],
          "description": "Array of CSS file extensions to search for"
        },
        "cssPeakPro.enableFallbackToGlobal": {
          "type": "boolean",
          "default": true,
          "description": "When no scoped CSS found, fall back to showing global CSS files"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build": "node scripts/build.js",
    "package": "vsce package",
    "test": "node test.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "keywords": [
    "css",
    "scss",
    "sass",
    "less",
    "hover",
    "peek",
    "definition",
    "smart-scoping",
    "html",
    "react",
    "vue"
  ]
}
